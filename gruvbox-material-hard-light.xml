<?xml version="1.0" encoding="UTF-8"?>
<!--
Gruvbox Material Hard Dark Gedit theme is based on:
	1. Catppuccin Gedit theme
	2. Gruvbox Gedit theme
	3. Gruvbox Material colorscheme
-->

<style-scheme id="gruvbox_material_hard_dark" _name="Gruvbox Material Hard Dark" version="1.0">

  <author>xelser</author>
  <_description>Pleasant for the eyes theme for Gedit</_description>

  <!-- Gruvbox Material Palette -->
  <color name="bg_dim"                      value="#f3eac7"/>
  <color name="bg0"                         value="#f9f5d7"/>
  <color name="bg1"                         value="#f5edca"/>
  <color name="bg2"                         value="#f3eac7"/>
  <color name="bg3"                         value="#f2e5bc"/>
  <color name="bg4"                         value="#eee0b7"/>
  <color name="bg5"                         value="#ebdbb2"/>
  <color name="bg_statusline1"              value="#f5edca"/>
  <color name="bg_statusline2"              value="#f3eac7"/>
  <color name="bg_statusline3"              value="#eee0b7"/>
  <color name="bg_diff_green"               value="#e4edc8"/>
  <color name="bg_visual_green"             value="#dde5c2"/>
  <color name="bg_diff_red"                 value="#f8e4c9"/>
  <color name="bg_visual_red"               value="#f0ddc3"/>
  <color name="bg_diff_blue"                value="#e0e9d3"/>
  <color name="bg_visual_blue"              value="#473c29"/>
  <color name="bg_visual_yellow"            value="#f9eabf"/>
  <color name="bg_current_word"             value="#f3eac7"/>
  <color name="fg0"                         value="#654735"/>
  <color name="fg1"                         value="#4f3829"/>
  <color name="red"                         value="#c14a4a"/>
  <color name="orange"                      value="#c35e0a"/>
  <color name="yellow"                      value="#b47109"/>
  <color name="green"                       value="#6c782e"/>
  <color name="aqua"                        value="#4c7a5d"/>
  <color name="blue"                        value="#45707a"/>
  <color name="purpe"                       value="#945e80"/>
  <color name="bg_red"                      value="#ae5858"/>
  <color name="bg_green"                    value="#6f8352"/>
  <color name="bg_yellow"                   value="#a96b2c"/>
  <color name="grey0"                       value="#a89984"/>
  <color name="grey1"                       value="#928374"/>
  <color name="grey2"                       value="#7c6f64"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="fg0" background="bg0"/>
  <style name="selection"                   foreground="fg0" background="bg4"/>
  <style name="cursor"                      foreground="fg1"/>
  <style name="secondary-cursor"            foreground="fg1"/>
  <style name="current-line"                background="bg_current_word"/>
  <style name="line-numbers"                foreground="fg0" background="bg_dim"/>
  <style name="draw-spaces"                 foreground="fg1"/>
  <style name="background-pattern"          background="#bg_dim"/>
  
  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="orange"/>
  <style name="bracket-mismatch"            foreground="bg0" background="red"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="fg1" background="fg0"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="bg0" background="orange"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="grey0"/>
  <style name="def:shebang"                 foreground="grey1" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="fg1"/>
  <style name="def:string"                  foreground="aqua"/>
  <style name="def:special-char"            foreground="purple"/>
  <style name="def:special-constant"        foreground="purple"/>
  <style name="def:floating-point"          foreground="aqua"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="blue"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="orange" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="yellow" bold="true"/>

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="yellow" bold="true"/>
  <style name="def:inline-code"             foreground="green"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="purple"/>
  <style name="def:link-symbol"             foreground="blue" bold="true"/>
  <style name="def:link-destination"        foreground="blue" italic="true" underline="single"/>
  <style name="def:heading"                 foreground="aqua" bold="true"/>
  <style name="def:thematic-break"          foreground="green" bold="true"/>
  <style name="def:preformatted-section"    foreground="green"/>
  <style name="def:list-marker"             foreground="aqua" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="aqua"/>
  <style name="def:error"                   foreground="red" bold="true"/>
  <style name="def:warning"                 foreground="orange"/>
  <style name="def:note"                    foreground="blue" bold="true"/>
  <style name="def:net-address"             italic="true" underline="single"/>
</style-scheme>
